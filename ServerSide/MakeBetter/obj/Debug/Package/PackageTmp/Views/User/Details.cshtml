@model MakeBetter.Models.User

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>User</legend>

    <div class="display-label">Email</div>
    <div class="display-field">@Model.Email</div>

    <div class="display-label">NickName</div>
    <div class="display-field">@Model.NickName</div>

    <div class="display-label">Rating</div>
    <div class="display-field">@Model.Rating</div>

    <div class="display-label">KloutId</div>
    <div class="display-field">@Model.KloutId</div>

    <div class="display-label">DnaId</div>
    <div class="display-field">@Model.DnaId</div>

    <div class="display-label">PasswordHash</div>
    <div class="display-field">@Model.PasswordHash</div>

    <div class="display-label">VKId</div>
    <div class="display-field">@Model.VKId</div>

    <div class="display-label">FacebookId</div>
    <div class="display-field">@Model.FacebookId</div>

    <div class="display-label">GoogleId</div>
    <div class="display-field">@Model.GoogleId</div>

    <div class="display-label">Banned</div>
    <div class="display-field">@Model.Banned</div>

    <div class="display-label">Phone</div>
    <div class="display-field">@Model.Phone</div>

    <div class="display-label">Comment</div>
    <div class="display-field">@(Model.Comment == null ? "None" : Model.Comment.Count.ToString())</div>

    <div class="display-label">Task</div>
    <div class="display-field">@(Model.Task == null ? "None" : Model.Task.Count.ToString())</div>

    <div class="display-label">UsersInTask</div>
    <div class="display-field">@(Model.UsersInTask == null ? "None" : Model.UsersInTask.Count.ToString())</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.UserId }) |
    @Html.ActionLink("Back to List", "Index")
</p>


