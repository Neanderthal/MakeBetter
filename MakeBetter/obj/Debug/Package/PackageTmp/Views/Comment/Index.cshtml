@model IEnumerable<MakeBetter.Models.Comment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null,  new { @class= "btn btn-primary"})
</p>
<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th></th>
        <th>
            Body
        </th>
        <th>
            Task
        </th>
        <th>
            User
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CommentId }, new {@class="btn-mini btn  btn-primary"}) |
            @Html.ActionLink("Details", "Details", new { id=item.CommentId }, new {@class="btn-mini btn  btn-info"}) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CommentId }, new {@class="btn-mini btn  btn-danger"})
        </td>
        <td>
			@item.Body
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.Task).ToString()
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.User).ToString()
        </td>
    </tr>
}

</table>


